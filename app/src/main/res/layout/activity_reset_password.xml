<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="10dp">
        </TextView>

    </RelativeLayout>

    <EditText
        android:id="@+id/find_your_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please write your phone number."
        android:layout_margin="15dp"
        android:background="@drawable/input_design"
        android:layout_below="@+id/relative123"
        android:textColorHint="@android:color/white"
        android:textColor="@color/colorPrimaryDark"
        android:padding="14dp"/>

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer The Following Security Questions?"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_below="@+id/find_your_number"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is the first number of your phone?"
        android:layout_margin="15dp"
        android:background="@drawable/input_design"
        android:textColorHint="@android:color/white"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/title_questions"
        android:padding="14dp"/>

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Whats your favorite super hero?"
        android:layout_margin="15dp"
        android:background="@drawable/input_design"
        android:layout_below="@+id/question_1"
        android:textColorHint="@android:color/white"
        android:textColor="@color/colorPrimaryDark"
        android:padding="14dp"/>

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:layout_margin="15dp"
        android:background="@drawable/buttons"
        android:layout_below="@+id/question_2"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="14dp"/>

</RelativeLayout>